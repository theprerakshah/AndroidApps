<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:layout_margin="4dp"
        android:layout_marginTop="40dp"
        android:padding="4dp"
        android:elevation="23dp">


    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outerLayoutRV"
            android:background="@drawable/card_back">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="day"
                android:id="@+id/idTV_time"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#F4E869" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idTV_temp"
                android:layout_below="@id/idTV_time"
                android:text="23"
                android:textSize="23sp"
                android:textColor="#F4E869"
                android:textStyle="bold"
                android:gravity="center" />

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/idIV_temperature"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:layout_below="@id/idTV_temp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idTV_AirFlow"
                android:layout_below="@+id/idIV_temperature"
                android:textSize="12sp"
                android:text="hell"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:padding="3dp"
                android:layout_margin="3dp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>